{
  "manifest_version": 3,
  "name": "Squarespace Tools Extension",
  "description": "Inject dev tools into Squarespace sites.",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
  {
    "matches": ["*://*.squarespace.com/*"],
    "js": ["content/inject.js"],
    "all_frames": true
  }
],
  "web_accessible_resources": [
    {
      "resources": ["tools/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
